{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:dev",
                "--",
                "--inspect-brk"
            ],
            "restart": true,
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "autoAttachChildProcesses": true,
            "cwd": "${workspaceRoot}"
        }
    ]
}